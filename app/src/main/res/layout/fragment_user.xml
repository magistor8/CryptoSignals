<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="?colorPrimary"
        android:gravity="center"
        android:text="USERNAME"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_sub"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/corners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <TextView
        android:id="@+id/text_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="my subscriptions"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/olive"
        app:layout_constraintBottom_toBottomOf="@+id/view_sub"
        app:layout_constraintStart_toStartOf="@+id/view_sub"
        app:layout_constraintTop_toTopOf="@+id/view_sub" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_sub"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:padding="2dp"
        android:src="@drawable/next"
        android:tint="@color/olive"
        app:layout_constraintBottom_toBottomOf="@+id/view_sub"
        app:layout_constraintEnd_toEndOf="@+id/view_sub"
        app:layout_constraintTop_toTopOf="@+id/view_sub" />

    <View
        android:id="@+id/view_mes"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/corners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_sub" />

    <TextView
        android:id="@+id/text_mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="messages"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/olive"
        app:layout_constraintBottom_toBottomOf="@+id/view_mes"
        app:layout_constraintStart_toStartOf="@+id/view_mes"
        app:layout_constraintTop_toTopOf="@+id/view_mes" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_mes"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:padding="2dp"
        android:src="@drawable/next"
        android:tint="@color/olive"
        app:layout_constraintBottom_toBottomOf="@+id/view_mes"
        app:layout_constraintEnd_toEndOf="@+id/view_mes"
        app:layout_constraintTop_toTopOf="@+id/view_mes" />

    <View
        android:id="@+id/view_dat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/corners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_mes" />

    <TextView
        android:id="@+id/text_dat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="user data"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/olive"
        app:layout_constraintBottom_toBottomOf="@+id/view_dat"
        app:layout_constraintStart_toStartOf="@+id/view_dat"
        app:layout_constraintTop_toTopOf="@+id/view_dat" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_dat"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:padding="2dp"
        android:src="@drawable/next"
        android:tint="@color/olive"
        app:layout_constraintBottom_toBottomOf="@+id/view_dat"
        app:layout_constraintEnd_toEndOf="@+id/view_dat"
        app:layout_constraintTop_toTopOf="@+id/view_dat" />

    <View
        android:id="@+id/view_set"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/corners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_dat" />

    <TextView
        android:id="@+id/text_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="settings"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/olive"
        app:layout_constraintBottom_toBottomOf="@+id/view_set"
        app:layout_constraintStart_toStartOf="@+id/view_set"
        app:layout_constraintTop_toTopOf="@+id/view_set" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_set"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:padding="2dp"
        android:src="@drawable/next"
        android:tint="@color/olive"
        app:layout_constraintBottom_toBottomOf="@+id/view_set"
        app:layout_constraintEnd_toEndOf="@+id/view_set"
        app:layout_constraintTop_toTopOf="@+id/view_set" />

    <TextView
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/t_pink"
        android:textStyle="bold"
        android:text="sign out"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_set" />

</androidx.constraintlayout.widget.ConstraintLayout>